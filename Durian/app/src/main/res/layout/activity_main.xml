<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back_image"
    >

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/top_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002"
        app:srcCompat="@drawable/ic_durian_logo_all_black"
        tools:srcCompat="@drawable/ic_durian_logo_all_black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Logo"
        app:layout_constraintStart_toStartOf="@+id/Logo"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.052" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/top_button_frame"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:text="@string/cmLabel"

            android:textSize="20dp" />

        <Button
            android:id="@+id/pictureButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/top_button_frame"
            android:drawableLeft="@drawable/ic_photo_library_black_24dp"
            android:text="@string/picLabel"

            android:textSize="20dp" />

        <Button
            android:id="@+id/multipleImagesButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/top_button_frame"
            android:drawableLeft="@drawable/ic_photo_filter_black_24dp"

            android:text="@string/picsLabel"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>